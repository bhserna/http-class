<h3>Cartelera</h3>
<p>Estas son las películas disponibles.</p>

<table class="movies">
  <thead>
    <tr>
      <th>Película</th>
      <th>Horarios</th>
      <th>Calificación (1 - 5)</th>
    </tr>
  </thead>
  <tbody>
    <% movies.forEach((movie) => { %>
      <tr>
        <td class="movie">
          <img src="/images/<%= movie.imageName %>"/>
          <a href="/<%= movie.id %>"><%= movie.name %></a>
        </td>
        <td><%= movie.schedule.join(", ") %></td>
        <td><%= movie.score %></td>
      </tr>
    <% }); %>
  </tbody>
</table>
